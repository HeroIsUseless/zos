draw.z: @\screen\draw.z;

rect(left: dword, top: dword, width: dword, height: dword, color: dword, addrVram: dword):(
  y: 0;
  while(y\<height, (
    x: 0;
    while(x\<width, (
      color: color;
      draw.z\pixel(left+x, top+y, color, 320, addrVram);
      x <= x+1;
    ));
    y <= y+1;
  ));
);

blocks(addrVram: dword):(
  rect(0, 175, 320, 24, 7, addrVram);
  rect(5, 180, 24, 12, 3, addrVram);
);

draw(addrVram: dword):(
  blocks(addrVram);
  tstr: "HELLO ZOS";
  draw.z\string(110, 75, @tstr, 320, addrVram);
);

